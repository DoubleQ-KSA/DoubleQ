<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_vat_pos_order" model="report.paperformat">
            <field name="name">POS Order</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <!--            <field name="page_height">0</field>-->
            <!--            <field name="page_width">0</field>-->
            <field name="orientation">Portrait</field>
            <field name="margin_top">60</field>
            <field name="margin_bottom">35</field>
            <field name="margin_left">8</field>
            <field name="margin_right">8</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">55</field>
            <field name="dpi">90</field>
        </record>
        <record id="pos_order_report" model="ir.actions.report">
            <field name="name">POS Order</field>
            <field name="model">pos.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">vendor_vat_report.report_pos_template</field>
            <field name="report_file">vendor_vat_report.report_pos_template</field>
            <field name="binding_model_id" ref="point_of_sale.model_pos_order"/>
            <field name="paperformat_id" ref="vendor_vat_report.paperformat_vat_pos_order"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_pos_template_doc">
            <t t-call="web.basic_layout">

                <div class="header">
                    <div class="row" name="header_slogan">
                        <div class="col-12 text-center">
                            <img t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)"
                                 style="max-height: 120px;" alt="Logo"/>
                        </div>

                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-6 text-center">
                            <h4 style="color: #ff0000;">
                                فاتورة ضربية مبسطة
                            </h4>
                        </div>
                        <div class="col-3 text-right">
                            <h4 style="color: #ff0000;">Double,Q</h4>
                        </div>
                        <div class="col-3 text-right">
                            <h4 style="color: #ff0000;">الجودة المضاعفة</h4>
                        </div>

                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-3 text-right">
                            <span style="color: #ff0000;">
                                <span t-field="doc.name"/>
                            </span>
                        </div>
                        <div class="col-3 ">
                            <span style="color: #ff0000;">رقم الفاتوره</span>
                        </div>
                        <div class="col-6 text-right">
                            <span style="color: #ff0000;">مكة العوالي شارع ابراهيم الجفاني</span>
                        </div>

                    </div>
                    <br/>
                </div>
                <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>

                <div class="page">
                    <style>

                        table, th, td {
                        border: 1px solid black;
                        }
                        .page{

                        font-family: 'Almarai','Lato' !important;
                        background-image:url(/vendor_vat_report/static/src/img/img.png); !important;
                        background-size: 100% 100%;
                        }
                        body .header {
                        font-family: 'Almarai','Lato' !important;
                        }
                    </style>

                    <div class="oe_structure"/>


                    <div class="row">
                        <div class="col-3 text-right">
                            <span>
                                <span t-field="doc.date_order"/>
                            </span>
                        </div>
                        <div class="col-3">
                            <span style="color: #ff0000;">:</span>
                            <span style="color: #ff0000;">التاريخ</span>
                        </div>
                        <div class="col-3 text-right">
                            <span>
                                <span t-esc="doc.partner_id.name"/>
                            </span>
                        </div>
                        <div class="col-3 text-center">
                            <span style="color: #ff0000;">:</span>
                            <span style="color: #ff0000;">العميل</span>
                        </div>

                    </div>
                    <br/>

                    <!-- Is there a discount on at least one line? -->

                    <table class="table table-border table-sm o_main_table">
                        <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                        <thead style="display: table-row-group">
                            <tr style="border: 1px solid black;">
                                <th name="th_description" class="text-left">Description</th>
                                <th name="th_quantity" class="text-right">Quantity</th>
                                <th name="th_priceunit" class="text-right">Unit Price</th>
                                <th name="th_discount" class="text-right">
                                    <span>Disc.%</span>
                                </th>
                                <th name="th_taxes" class="text-right">Taxes</th>
                                <th name="th_subtotal" class="text-right">
                                    <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                                    <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">

                            <t t-set="current_subtotal" t-value="0"/>

                            <t t-foreach="doc.lines" t-as="line">

                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                                   groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal_incl"
                                   groups="account.group_show_line_subtotals_tax_included"/>

                                <tr style="border: 1px solid black;">
                                    <t>
                                        <td name="td_name">
                                            <span t-field="line.full_product_name"/>
                                        </td>
                                        <td name="td_quantity" class="text-right">
                                            <span t-field="line.qty"/>
                                        </td>
                                        <td name="td_priceunit" class="text-right">
                                            <span t-field="line.price_unit"
                                                  t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.discount"/>
                                        </td>
                                        <td name="td_taxes" class="text-right">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids_after_fiscal_position))"/>
                                        </td>
                                        <td style="background-color: #eeeeee;" name="td_subtotal"
                                            class="text-right o_price_total">
                                            <span t-field="line.price_subtotal"
                                                  t-options='{"widget": "monetary", "display_currency": doc.currency_id}'
                                                  groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <span t-field="line.price_subtotal_incl"
                                                  t-options='{"widget": "monetary", "display_currency": doc.currency_id}'
                                                  groups="account.group_show_line_subtotals_tax_included"/>
                                        </td>
                                    </t>
                                </tr>

                                <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-right">
                                        <td name="td_section_subtotal" colspan="99">
                                            <strong class="mr16">Subtotal</strong>
                                            <span
                                                    t-esc="current_subtotal"
                                                    t-options='{"widget": "monetary", "display_currency": doc.currency_id}'
                                            />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <div class="clearfix" name="so_total_summary">
                        <div id="total" class="row" name="total">
                            <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                <table class="table table-sm">
                                    <!-- Tax totals -->
                                    <t t-set="tax_totals" t-value="doc.amount_tax"/>
                                    <tr class="border-black o_subtotal">
                                        <td>
                                            <strong>Untaxed Amount</strong>
                                        </td>
                                        <td class="text-right">
                                            <span t-att-class="oe_subtotal_footer_separator"
                                                  t-esc="doc.amount_total -  doc.amount_tax"
                                                  t-options='{"widget": "monetary", "display_currency": doc.currency_id}'

                                            />
                                        </td>
                                    </tr>
                                    <tr class="border-black o_subtotal">
                                        <td>
                                            <strong>Taxes</strong>
                                        </td>
                                        <td style="background-color: #eeeeee;" class="text-right">
                                            <span t-att-class="oe_subtotal_footer_separator"
                                                  t-field="doc.amount_tax"
                                            />
                                        </td>
                                    </tr>
                                    <tr style="background-color: #ffcc00;" class="border-black o_subtotal">
                                        <td>
                                            <strong>Total</strong>
                                        </td>
                                        <td class="text-right">
                                            <span t-att-class="oe_subtotal_footer_separator"
                                                  t-field="doc.amount_total"
                                                  t-options='{"widget": "monetary", "display_currency": doc.currency_id}'
                                            />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="oe_structure"/>

                    <p t-field="doc.note"/>

                    <p id="fiscal_position_remark"
                       t-if="doc.fiscal_position_id and not is_html_empty(doc.fiscal_position_id.sudo().note)">
                        <strong>Fiscal Position Remark:</strong>
                        <span t-field="doc.fiscal_position_id.sudo().note"/>
                    </p>
                </div>
                <div class="footer">
                    <hr width="97%" style="background-color: rgb(204,204,204); border: medium none;
                     clear: both; display: block; font-size: 1px; min-height: 2px; line-height: 2; margin: 5px 0px;"/>
                    <div class="row">

                        <div class="col-3 text-right">
                            <Strong>Vat Number /</Strong>
                        </div>
                        <div class="col-5 text-center">
                            <span t-field="doc.company_id.vat"></span>
                        </div>
                        <div class="col-4"></div>
                    </div>
                    <div class="row">
                        <div class="col-4"></div>
                        <div class="col-4 text-center">
                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', doc.l10n_sa_qr_code_str, 100, 100)"
                                 class="text-center"/>
                        </div>
                        <div class="col-4"></div>
                    </div>
                </div>
            </t>
        </template>

        <template id="report_pos_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="vendor_vat_report.report_pos_template_doc" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>

    </data>
</odoo>