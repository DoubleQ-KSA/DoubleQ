<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="vendor_vat_wizard_form" model="ir.ui.view">
            <field name="name">Vendor Vat Report</field>
            <field name="model">vendor.vat.wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group attrs="{'invisible':[('product_printed','=',True)]}">
                            <group>
                                <field name="date_from"/>
                            </group>
                            <group>
                                <field name="date_to"/>
                            </group>
                        </group>
                        <group name='sub_group2' attrs="{'invisible':[('product_printed','=',False)]}">
                                <field name="file_name" invisible="1"/>
                                <field name="product_report_file" readonly="1" filename="file_name"/>
                                <field name="product_printed" invisible="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="print_excel_report" type="object" string="Print"
                            attrs="{'invisible':[('product_printed','=',True)]}" class="oe_highlight"
                            default_focus="1"/>
                    <button name="print_other_report" type="object" string="Other Report"
                            attrs="{'invisible':[('product_printed','=',False)]}" class="oe_highlight"
                            default_focus="1"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="vendor_vat_wizard_action" model="ir.actions.act_window">
            <field name="name">Vendor Vat </field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vendor.vat.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="vendor_vat_wizard_menu_categ" name="Vendor Vat"
                  parent="account.menu_finance_reports" action="vendor_vat_wizard_action" />

    </data>
</odoo>